---

<footer class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Info -->
      <div>
        <div class="mb-4">
          <a href="/" class="text-2xl font-bold text-white font-serif inline-flex items-center">
            <span class="sr-only">La Nueva Esperanza</span>
            <img src="/favicon.svg" alt="La Nueva Esperanza" class="h-12 w-auto mr-2">
            <span>La Nueva Esperanza</span>
          </a>
        </div>
        
        <address class="not-italic mb-4 text-gray-300">
          <p>Cra 49 # 63 45</p>
          <p>Prado, Medellín, Antioquia</p>
          <p class="mt-2">
            <a href="tel:+57 321 5990226" class="hover:text-primary-300">
              (57) 321 5990226
            </a>
          </p>
          <p>
            <a href="mailto:#" class="hover:text-primary-300">
              # <!-- colocar correo cuando se tenga -->
            </a>
          </p>
        </address>
        
        <!-- Office Hours -->
        <div class="mt-4 text-gray-300">
          <h4 class="text-sm font-bold mb-2 text-white">Horario de Atención</h4>
          {
            OfficeHoursContent ? (
              <div class="text-sm prose prose-sm prose-invert max-w-none [&_h3]:text-white [&_h3]:text-sm [&_h3]:font-bold [&_h3]:mb-2 [&_ul]:list-none [&_ul]:p-0 [&_li]:mb-1 [&_strong]:text-white">
                <OfficeHoursContent />
              </div>
            ) : (
              <div class="text-sm">
                <p><strong class="text-white">Lun-Sab:</strong> 24 horas</p>
                <p><strong class="text-white">Domingo:</strong> 12:00 PM - 10:00 PM</p>
              </div>
            )
          }
        </div>
        
        <!-- Social Links -->
        <div class="flex space-x-4 mt-6">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transition-colors"
                aria-label={link.name}
              >
                <Fragment set:html={link.icon} />
              </a>
            ))
          }
        </div>
      </div>
      
      <!-- Navigation Links -->
      {
        footerNavs.map((group) => (
          <div>
            <h4 class="text-lg font-bold mb-4 text-white">{group.title}</h4>
            <ul class="space-y-2">
              {group.items.map((item) => (
                <li>
                  <a 
                    href={item.href} 
                    class="text-gray-300 hover:text-primary-300 transition-colors"
                  >
                    {item.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
    
    <!-- Copyright -->
    <div class="pt-8 mt-8 border-t border-gray-800 text-center text-gray-400 text-sm">
      <p>&copy; {currentYear} La Nueva Esperanza. All rights reserved.</p>
      <p class="mt-2">
        <a href="/privacy-policy" class="hover:text-primary-300 mr-4">Política de Privacidad</a>
        <a href="/terms-of-service" class="hover:text-primary-300">Términos de Servicio</a>
      </p>
    </div>
  </div>
</footer>