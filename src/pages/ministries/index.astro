---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHeader from "../../components/Sections/PageHeader.astro";
import { getCollection } from "astro:content";

// Fetch all ministries
const all = await getCollection("ministries", ({ data }) =>
  import.meta.env.PROD ? !data.draft : true
);
// Sort by order or name
const ministries = all.sort((a, b) =>
  (a.data.order ?? 0) - (b.data.order ?? 0) ||
  a.data.name.localeCompare(b.data.name)
);
---

<BaseLayout title="Nuestros Programas" description="Descubre nuestros programas.">
  <PageHeader
    title="Nuestros Programas"
    subtitle="Caminos de cambio y acompañamiento para reconstruir vidas con esperanza"
    backgroundImage="/uploads/clase.png"
  />

  <!-- Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Conoce Nuestros Planes</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Descubre cómo acompañamos cada proceso con fe, compromiso y la convicción de que toda vida puede reconstruirse.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {ministries.map(m => (
        <a
          href={`/ministries/${m.slug}`}
          class="
          g-white rounded-lg shadow 
          flex flex-col overflow-hidden 
          hover:shadow-lg transition
          min-h-[370px]
          "
        >
            <!-- gambar fixed height 200px -->
            {m.data.logo && (
              <div class="w-full h-[200px] overflow-hidden">
                <img
                  src={m.data.logo}
                  alt={m.data.name}
                  class="w-full h-full object-cover"
                />
              </div>
            )}

            <div class="p-4 flex flex-col flex-1 justify-between">
              <div>
                <h3 class="text-xl font-semibold mb-2">{m.data.name}</h3>
                <p class="text-gray-700">{m.data.summary}</p>
              </div>
              {(m.data.coordinator || m.data.schedule) && (
                <div class="mt-4 space-y-1 text-sm text-gray-600">
                  {m.data.coordinator && (
                    <div class="flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg"
                           class="h-4 w-4 mr-1" fill="none"
                           viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              stroke-width="2"
                              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                      Coordinador: {m.data.coordinator}
                    </div>
                  )}
                  {m.data.schedule && (
                    <div class="flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg"
                           class="h-4 w-4 mr-1 align-text-top" fill="none"
                           viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              stroke-width="2"
                              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {m.data.schedule}
                    </div>
                  )}
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Volunteer CTA -->
  <section
    class="py-20 bg-cover bg-center text-white"
    style="background-image:
      linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)),
      url(/uploads/coercitivo.png)"
  >
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">¿Listo para cambiar tu vida?</h2>
        <p class="text-xl mb-8">
          Dar el primer paso nunca es fácil, pero no estás solo. Nuestro equipo te acompaña en cada etapa de tu proceso para que puedas reconstruir tu vida con fuerza, fe y esperanza.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-5 py-3
                 text-base font-medium text-white bg-primary-600 rounded-md
                 shadow-sm hover:bg-primary-700 focus:outline-none
                 focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
        >
          ¡Contáctanos!
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
